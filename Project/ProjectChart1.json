{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/JamieMilliken/JamieMilliken.github.io/main/Project/Chart1data_final.csv",
    },
    "title": {
      "text": "London Property Prices",
      "subtitle": "1999-2021, Source: Land Registry",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "mark": {"type": "line", "color": "rgb(178,34,34)"},
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "axis": {"grid": false},
        "title": "Year"
      },
      "y": {
        "field": "Price",
        "type": "quantitative",
        "axis": {"grid": false},
        "title": "Price (Â£)"
      },
      "color": {
        "field": "Property Type",
        "type": "nominal"
      },
      "tooltip": [
        {"field": "Date", "type": "temporal"},
        {"field": "Price", "type": "quantitative"}
      ]
    },
    "selection": {
      "color_type": {
        "type": "single",
        "fields": ["Property Type"],
        "bind": {
          "input": "select",
          "options": [null, "All property types", "Detached houses", "Semi-detached houses", "Terraced houses", "Flats and maisonettes"],
          "name": "Choose Property Type"
        }
      }
    },
    "transform": [
      {
        "filter": {
          "selection": "color_type",
          "oneOf": ["All property types", "Detached houses", "Semi-detached houses", "Terraced houses", "Flats and maisonettes"]
        }
      }
    ]
  }
  